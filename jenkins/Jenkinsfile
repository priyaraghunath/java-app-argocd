pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1'
        ECR_REPO = '<aws_account_id>.dkr.ecr.us-east-1.amazonaws.com/java-app'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/yourname/java-app.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                junit 'target/surefire-reports/*.xml'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQubeServer') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Docker Build & Push to ECR') {
            steps {
                script {
                    sh '''
                    $(aws ecr get-login-password --region $AWS_REGION | \
                      docker login --username AWS --password-stdin $ECR_REPO)

                    docker build -t java-app:$GIT_COMMIT .
                    docker tag java-app:$GIT_COMMIT $ECR_REPO:$GIT_COMMIT
                    docker push $ECR_REPO:$GIT_COMMIT
                    '''
                }
            }
        }

        stage('Update GitOps Repo') {
            steps {
                // Your logic to update Argo CD manifests
            }
        }
    }
}
