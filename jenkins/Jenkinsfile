pipeline {
    agent {
        docker {
            image 'maven:3.8.6-openjdk-17'
            args '-v $HOME/.m2:/root/.m2'  // cache Maven repo between builds (optional)
        }
    }

    environment {
        AWS_REGION = 'us-east-1'
        ECR_REPO = '682033504000.dkr.ecr.us-east-1.amazonaws.com/java-app'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/priyaraghunath/java-app-argocd.git'
            }
        }

        stage('Build') {
            steps {
                dir('spring-boot-app') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir('spring-boot-app') {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('spring-boot-app') {
                    withSonarQubeEnv('SonarQubeServer') {
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }

        stage('Docker Build & Push to ECR') {
            steps {
                script {
                    sh '''
                    $(aws ecr get-login-password --region $AWS_REGION | \
                      docker login --username AWS --password-stdin $ECR_REPO)

                    docker build -t java-app:$IMAGE_TAG .
                    docker tag java-app:$IMAGE_TAG $ECR_REPO:$IMAGE_TAG
                    docker push $ECR_REPO:$IMAGE_TAG
                    '''
                }
            }
        }

        stage('Update GitOps Repo') {
            steps {
                script {
                    sh """
                    sed -i 's|image:.*|image: $ECR_REPO:$IMAGE_TAG|' manifests/deployment.yaml
                    git config user.email "jenkins@example.com"
                    git config user.name "Jenkins CI"
                    git add manifests/deployment.yaml
                    git commit -m "Update image tag to $IMAGE_TAG"
                    git push origin main
                    """
                }
            }
        }
    }
}
